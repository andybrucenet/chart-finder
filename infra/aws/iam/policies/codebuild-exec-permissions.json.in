{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "Logs",
        "Effect": "Allow",
        "Action": [
          "logs:CreateLogGroup",
          "logs:CreateLogStream",
          "logs:PutLogEvents"
        ],
        "Resource": "arn:aws:logs:<REGION>:<ACCOUNT_ID>:log-group:/aws/codebuild/<PROJECT_NAME>*"
      },
      {
        "Sid": "Artifacts",
        "Effect": "Allow",
        "Action": [
          "s3:GetObject",
          "s3:PutObject",
          "s3:GetObjectVersion",
          "s3:DeleteObject",
          "s3:ListBucket"
        ],
        "Resource": [
          "arn:aws:s3:::<ARTIFACT_BUCKET>",
          "arn:aws:s3:::<ARTIFACT_BUCKET>/*"
        ]
      }
      // add service-specific statements here (e.g., CloudFormation/SAM, DynamoDB, ECR, Secrets Manager)
    ]
  }
