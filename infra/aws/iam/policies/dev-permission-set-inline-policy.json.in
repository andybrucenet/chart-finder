{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowPassingCiCdRole",
      "Effect": "Allow",
      "Action": "iam:PassRole",
      "Resource": "arn:aws:iam::$CF_LOCAL_AWS_ACCOUNT_ID:role/$CF_LOCAL_ENV_ID-codebuild-exec-role",
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": [
            "cloudformation.amazonaws.com",
            "codebuild.amazonaws.com"
          ]
        }
      }
    },
    {
      "Sid": "AllowSamCfnLifecycle",
      "Effect": "Allow",
      "Action": [
        "cloudformation:CreateChangeSet",
        "cloudformation:ExecuteChangeSet",
        "cloudformation:DescribeChangeSet",
        "cloudformation:DescribeStacks",
        "cloudformation:DescribeStackEvents",
        "cloudformation:GetTemplate",
        "cloudformation:DeleteChangeSet"
      ],
      "Resource": [
        "arn:aws:cloudformation:$CF_LOCAL_AWS_REGION:$CF_LOCAL_AWS_ACCOUNT_ID:stack/$CF_LOCAL_ENV_ID/*",
        "arn:aws:cloudformation:$CF_LOCAL_AWS_REGION:$CF_LOCAL_AWS_ACCOUNT_ID:stackset/$CF_LOCAL_ENV_ID:*"
      ]
    },
    {
      "Sid": "AllowSamRoleManagement",
      "Effect": "Allow",
      "Action": [
        "iam:CreateRole",
        "iam:DeleteRole",
        "iam:AttachRolePolicy",
        "iam:DetachRolePolicy",
        "iam:PutRolePolicy",
        "iam:DeleteRolePolicy",
        "iam:TagRole",
        "iam:UntagRole"
      ],
      "Resource": "arn:aws:iam::$CF_LOCAL_AWS_ACCOUNT_ID:role/$CF_LOCAL_ENV_ID-*"
    },
    {
      "Sid": "AllowIamListRoles",
      "Effect": "Allow",
      "Action": "iam:ListRoles",
      "Resource": "*"
    },
    {
      "Sid": "AllowIamRoleRead",
      "Effect": "Allow",
      "Action": [
        "iam:GetRole",
        "iam:ListRolePolicies",
        "iam:GetRolePolicy",
        "iam:ListAttachedRolePolicies"
      ],
      "Resource": [
        "arn:aws:iam::$CF_LOCAL_AWS_ACCOUNT_ID:role/$CF_LOCAL_ENV_ID-*",
        "arn:aws:iam::$CF_LOCAL_AWS_ACCOUNT_ID:role/$CF_LOCAL_AWS_SSO_ROLE",
        "arn:aws:iam::$CF_LOCAL_AWS_ACCOUNT_ID:role/aws-reserved/sso.amazonaws.com/$CF_LOCAL_AWS_SSO_ROLE",
        "arn:aws:iam::$CF_LOCAL_AWS_ACCOUNT_ID:role/aws-reserved/sso.amazonaws.com/$CF_LOCAL_AWS_REGION/$CF_LOCAL_AWS_SSO_ROLE"
      ]
    }
  ]
}
