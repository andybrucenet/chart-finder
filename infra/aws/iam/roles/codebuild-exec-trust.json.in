{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Service": "codebuild.amazonaws.com"
      },
      "Action": "sts:AssumeRole",
      "Condition": {
        "StringEquals": {
          "aws:SourceArn": "arn:aws:codebuild:$CF_LOCAL_AWS_REGION:$CF_LOCAL_AWS_ACCOUNT_ID:project/$CF_LOCAL_ENV_ID-*"
        }
      }
    }
  ]
}
