# doc-1: AWS SAM template that provisions the serverless ChartFinder API stack.
AWSTemplateFormatVersion: '2010-09-09'
Transform: AWS::Serverless-2016-10-31
Description: ChartFinder API deployed via AWS SAM
Parameters:
# doc-2: Parameterized owner email keeps tags and notifications flexible between envs.
  OwnerEmail:
    Type: String
    Default: andybrucenet@gmail.com
    Description: Email of the primary owner for tagging and notifications.

Globals:
# doc-3: Shared defaults for all Lambda functions unless overridden individually.
  Function:
    Runtime: dotnet8
    Architectures:
      - arm64
    Timeout: 30
    MemorySize: 512

Resources:
# doc-4: DynamoDB table storing chart definitions keyed by chart Id.
  ChartsTable:
    Type: AWS::DynamoDB::Table
    Properties:
      TableName: !Sub '${AWS::StackName}-charts'
      BillingMode: PAY_PER_REQUEST
      AttributeDefinitions:
        - AttributeName: Id
          AttributeType: S
      KeySchema:
        - AttributeName: Id
          KeyType: HASH
      Tags:
        - Key: Project
          Value: ChartFinder
        - Key: Environment
          Value: $CF_LOCAL_BILLING_ENV
        - Key: Owner
          Value: !Ref OwnerEmail

# doc-5: ASP.NET Core Lambda function that exposes the ChartFinder API.
  AspNetCoreFunction:
    Type: AWS::Serverless::Function
    Properties:
      Handler: ChartFinder.Api
      CodeUri: $CF_HOME/src/backend/ChartFinder.Api
      Runtime: dotnet8
      MemorySize: 1024
      Timeout: 30
      Environment:
        Variables:
          TABLE_NAME: !Ref ChartsTable
      Policies:
        - DynamoDBCrudPolicy:
            TableName: !Ref ChartsTable
      Tags:
        Project: ChartFinder
        Environment: $CF_LOCAL_BILLING_ENV
        Owner: !Ref OwnerEmail
      Events:
        ApiProxy:
          Type: Api
          Properties:
            Path: /{proxy+}
            Method: ANY

Outputs:
    AspNetCoreFunctionArn:
      Description: ARN of the deployed ChartFinder Lambda.
    ApiInvokeUrl:
      Description: Invoke URL for the Calculator API (Prod stage).
      Value: !Sub https://${ServerlessRestApi}.execute-api.${AWS::Region}.amazonaws.com/$CF_LOCAL_ENV_ID/
